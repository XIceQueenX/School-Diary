<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddTarefas">

    <Spinner
        android:id="@+id/addsubject"
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:layout_marginBottom="508dp"
        android:clickable="true"
        android:dropDownWidth="match_parent"
        android:elevation="10dp"
        android:fontFamily="@font/gothic"
        android:paddingStart="0dp"
        android:popupBackground="@drawable/spinner"
        android:popupElevation="1dp"
        android:prompt="@string/menu_slideshow"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:elevation="10dp"
        android:fontFamily="@font/gothic"
        android:text="Selecione uma Disciplina abaixo:"
        android:textColor="#959292"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/addsubject"
        app:layout_constraintStart_toStartOf="@+id/addsubject" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnaddta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"
        android:tint="#FFFFFF"
        app:backgroundTint="@color/roxoescuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_done" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="371dp"
        android:layout_height="742dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.816"
        app:srcCompat="@drawable/retactanglev2" />

    <ImageView
        android:id="@+id/imageView43"
        android:layout_width="345dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toEndOf="@+id/addsubject"
        app:layout_constraintStart_toStartOf="@+id/addsubject"
        app:layout_constraintTop_toTopOf="@+id/addsubject"
        app:srcCompat="@drawable/spinnercontorno" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="0dp"
        android:layout_height="57dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/retanguloroxo" />

    <ImageView
        android:id="@+id/backbutton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:elevation="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="361dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/brlnsr"
        android:text="Adicionar Tarefa"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adddate"
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:layout_marginBottom="600dp"
        android:ellipsize="start"
        android:fontFamily="@font/gothic"
        android:gravity="center|left"
        android:hint="Adicione uma data"
        android:lineSpacingExtra="8sp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/addnotes"
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:layout_marginTop="140dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/gothic"
        android:hint="Adicione uma Anotação"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/adddate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addtitle"
        android:layout_width="340dp"
        android:layout_height="49dp"
        android:layout_marginTop="88dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/gothic"
        android:hint="Titulo"
        android:singleLine="true"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/addnotes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>