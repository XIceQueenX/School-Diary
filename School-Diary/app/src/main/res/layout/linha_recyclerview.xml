<?xml version="1.0" encoding="utf-8"?>

<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cor"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:gravity="clip_vertical|end"

            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="75dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/editbtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="75dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/btndelete" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    app:layout_constraintBottom_toBottomOf="@+id/edit"
                    app:layout_constraintEnd_toEndOf="@+id/edit"
                    app:layout_constraintStart_toStartOf="@+id/edit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_edit_24" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginBottom="7dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/delete"
                    app:layout_constraintStart_toStartOf="@+id/delete"
                    app:layout_constraintTop_toTopOf="@+id/delete"
                    app:srcCompat="@drawable/ic_delete" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="11dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#E9E2E2"
            android:elevation="1dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="366dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toTopOf="@+id/anotacoestarefa_txt"
                app:layout_constraintTop_toTopOf="@+id/anotacoestarefa_txt">

                <TextView
                    android:id="@+id/id_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="32dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toTopOf="@+id/textView12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.545" />

                <TextView
                    android:id="@+id/anotacoestarefa_txt"
                    android:layout_width="191dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="90dp"
                    android:layout_marginBottom="22dp"
                    android:fontFamily="@font/gothic"
                    android:lineSpacingExtra="1sp"
                    android:lines="2"
                    android:maxLines="2"
                    android:textAlignment="textStart"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="63dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="22dp"
                    android:fontFamily="@font/gothic"
                    android:text="Anotações:"
                    android:textColor="#6a6363"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/titulotarefa_txt"
                    android:layout_width="200dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/gothic"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="#6a6363"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/materia_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/gothic"
                    android:gravity="left|center_vertical"
                    android:textAlignment="viewStart"
                    android:textColor="#9C9A9B"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/cordisciplina" />

                <ImageView
                    android:id="@+id/done"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/titulotarefa_txt"
                    app:layout_constraintStart_toEndOf="@+id/titulotarefa_txt"
                    app:layout_constraintTop_toTopOf="@+id/titulotarefa_txt"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/undone" />

                <TextView
                    android:id="@+id/donetxt"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:text="TextView"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toTopOf="@+id/done"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:visibility="invisible" />

                <ImageView
                    android:id="@+id/cordisciplina"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/cordisciplina"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/linha" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        />
    </FrameLayout>


</com.chauthai.swipereveallayout.SwipeRevealLayout>


