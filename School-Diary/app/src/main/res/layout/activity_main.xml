<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Menu"

    android:fitsSystemWindows="true">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:background="@drawable/drawerscren"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:divider="@style/NewFontStyle"
        android:dividerHeight="0dp"

        app:itemTextAppearance="@style/NewFontStyle"

        app:headerLayout="@layout/header"
        app:itemIconTint="@color/cinza"
        app:itemTextColor="#FFFFFF"
        app:menu="@menu/main_menu">

    </com.google.android.material.navigation.NavigationView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include"
            layout="@layout/appbar"
            android:layout_width="391dp"
            android:layout_height="47dp"
            android:elevation="100dp"
            android:visibility="gone"
            app:titleTextColor="#FFFFFF"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/retanguloroxo"
            android:layout_width="459dp"
            android:layout_height="875dp"
            android:layout_marginBottom="228dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/retanguloroxoinicio" />

        <ImageView
            android:id="@+id/retangulocinza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="168dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/retangulobrancoinicio" />

        <ImageView
            android:id="@+id/gravacao"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/testes"
            app:layout_constraintTop_toBottomOf="@+id/tarefa"
            app:srcCompat="@drawable/gravacoes" />

        <ImageView
            android:id="@+id/horario"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="303dp"
            android:layout_marginEnd="21dp"
            android:clickable="true"
            app:layout_constraintBottom_toTopOf="@+id/testes"
            app:layout_constraintEnd_toStartOf="@+id/tarefa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/horario" />

        <ImageView
            android:id="@+id/testes"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gravacao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horario"
            app:srcCompat="@drawable/teste" />

        <ImageView
            android:id="@+id/tarefa"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="303dp"
            android:layout_marginEnd="9dp"
            app:layout_constraintBottom_toTopOf="@+id/gravacao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/horario"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/tarefa" />

        <ImageView
            android:id="@+id/retnagulodiaria"
            android:layout_width="395dp"
            android:layout_height="227dp"
            android:layout_marginTop="48dp"
            app:layout_constraintBottom_toTopOf="@+id/horario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.035"
            app:srcCompat="@drawable/retangulodias" />

        <TextView
            android:id="@+id/datamenu"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="68dp"
            android:fontFamily="@font/brlnsr"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/diasemana"
            app:layout_constraintEnd_toEndOf="@+id/diasemana"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="@+id/retnagulodiaria"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/diasemana"
            android:layout_width="373dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/brlnsr"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/retangulocinza"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/retnagulodiaria"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="178dp"
            android:layout_height="27dp"
            android:layout_marginBottom="52dp"
            android:fontFamily="@font/gothic"
            android:text="Horário Escolar"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/retanguloroxo"
            app:layout_constraintEnd_toEndOf="@+id/horario"
            app:layout_constraintStart_toStartOf="@+id/horario"
            app:layout_constraintTop_toBottomOf="@+id/horario"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/notaevent"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginBottom="52dp"
            android:fontFamily="@font/gothic"
            android:text="Tarefas "
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/retanguloroxo"
            app:layout_constraintEnd_toEndOf="@+id/tarefa"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tarefa"
            app:layout_constraintTop_toTopOf="@+id/gravacao"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/gothic"
            android:text="Testes"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/testes"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/testes"
            app:layout_constraintTop_toBottomOf="@+id/testes"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/gothic"
            android:text="Anotações"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/gravacao"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/gravacao"
            app:layout_constraintTop_toBottomOf="@+id/gravacao"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="150dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/retanguloroxo"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tarefa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:fontFamily="@font/gothic"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/retangulocinza"
            app:layout_constraintStart_toStartOf="@+id/retanguloroxo"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tarefa4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:fontFamily="@font/gothic"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/retangulocinza"
            app:layout_constraintStart_toStartOf="@+id/retanguloroxo"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tarefa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gothic"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/retangulocinza"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tarefa5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gothic"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/retangulocinza"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tarefa3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/gothic"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/retangulocinza"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tarefa6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/gothic"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/retangulocinza"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button3"
            android:layout_width="17dp"
            android:layout_height="22dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="360dp"
            android:background="@drawable/menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bolinha2"
            android:layout_width="7dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tarefa2"
            app:layout_constraintEnd_toStartOf="@+id/tarefa2"
            app:layout_constraintTop_toTopOf="@+id/tarefa2"
            app:srcCompat="@drawable/bolinha" />

        <ImageView
            android:id="@+id/bolinha3"
            android:layout_width="7dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tarefa3"
            app:layout_constraintEnd_toStartOf="@+id/tarefa3"
            app:layout_constraintTop_toTopOf="@+id/tarefa3"
            app:srcCompat="@drawable/bolinha" />

        <ImageView
            android:id="@+id/bolinha1"
            android:layout_width="7dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tarefa1"
            app:layout_constraintEnd_toStartOf="@+id/tarefa1"
            app:layout_constraintTop_toTopOf="@+id/tarefa1"
            app:srcCompat="@drawable/bolinha" />

        <ImageView
            android:id="@+id/bolinha4"
            android:layout_width="7dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tarefa4"
            app:layout_constraintEnd_toStartOf="@+id/tarefa4"
            app:layout_constraintTop_toTopOf="@+id/tarefa4"
            app:srcCompat="@drawable/bolinha" />

        <ImageView
            android:id="@+id/bolinha5"
            android:layout_width="7dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tarefa5"
            app:layout_constraintEnd_toStartOf="@+id/tarefa5"
            app:layout_constraintTop_toTopOf="@+id/tarefa5"
            app:srcCompat="@drawable/bolinha" />

        <ImageView
            android:id="@+id/bolinha6"
            android:layout_width="7dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tarefa6"
            app:layout_constraintEnd_toStartOf="@+id/tarefa6"
            app:layout_constraintTop_toTopOf="@+id/tarefa6"
            app:srcCompat="@drawable/bolinha" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.drawerlayout.widget.DrawerLayout>