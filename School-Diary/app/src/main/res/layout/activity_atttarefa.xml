<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1ECEC"
    tools:context=".activity.AddTarefas">

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:elevation="10dp"
        android:fontFamily="@font/gothic"
        android:text="Selecione uma Disciplina abaixo:"
        android:textColor="#959292"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/attsubject"
        app:layout_constraintStart_toStartOf="@+id/attsubject" />

    <EditText
        android:id="@+id/addtitle"
        android:layout_width="340dp"
        android:layout_height="49dp"
        android:layout_marginTop="88dp"
        android:background="@null"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="@font/gothic"
        android:hint="Titulo"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addnotes"
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:layout_marginBottom="648dp"
        android:elevation="10dp"
        android:ellipsize="start"
        android:fontFamily="@font/gothic"
        android:gravity="center"
        android:hint="Adicione uma nota"
        android:background="@null"
        android:lineSpacingExtra="8sp"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/attdate"
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:layout_marginBottom="600dp"
        android:elevation="10dp"
        android:ellipsize="start"
        android:fontFamily="@font/gothic"
        android:gravity="center|left"
        android:hint="Adicione uma data"
        android:lineSpacingExtra="8sp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/attsubject"
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:layout_marginBottom="520dp"
        android:clickable="true"
        android:dropDownWidth="match_parent"
        android:elevation="10dp"
        android:fontFamily="@font/gothic"
        android:paddingStart="0dp"
        android:popupBackground="@drawable/spinner"
        android:popupElevation="1dp"
        android:prompt="@string/menu_slideshow"
        android:spinnerMode="dropdown"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"
        android:tint="#FFFFFF"
        app:backgroundTint="@color/roxoescuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_done" />

    <ImageView
        android:id="@+id/imageView38"
        android:layout_width="0dp"
        android:layout_height="57dp"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/retanguloroxo" />

    <ImageView
        android:id="@+id/backbutton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:elevation="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="361dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/brlnsr"
        android:text="Atualizar Tarefas "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/attid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/attid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="734dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="371dp"
        android:layout_height="742dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.816"
        app:srcCompat="@drawable/retactanglev2" />

    <ImageView
        android:id="@+id/imageView47"
        android:layout_width="345dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toEndOf="@+id/attsubject"
        app:layout_constraintStart_toStartOf="@+id/attsubject"
        app:layout_constraintTop_toTopOf="@+id/attsubject"
        app:srcCompat="@drawable/spinnercontorno" />

</androidx.constraintlayout.widget.ConstraintLayout>